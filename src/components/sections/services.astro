---
import { ServicesGrid } from '@/components/services-grid';
import { Container } from '@/components/ui/container';
import Section from '@/components/ui/section.astro';
import { Caption, Heading, Paragraph } from '@/components/ui/typography';
---

<Section
  id="services"
  aria-labelledby="services-heading"
  hasBorderTop
  hasGlowEffect
>
  <Container>
    <div class="mb-16 flex flex-col items-center text-center">
      <Caption id="services-heading">Services</Caption>
      <Heading>
        Building products, <br class="lg:hidden" />delivering results
      </Heading>
      <Paragraph>
        I don't offer one-size-fits-all packages. I build <span
          class="text-neutrals-100">the product your business actually needs</span
        >, with clear communication and reliable delivery.
      </Paragraph>
    </div>
    <ServicesGrid client:visible />
  </Container>
</Section>
