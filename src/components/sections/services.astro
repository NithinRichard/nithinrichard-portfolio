---
import { ServicesGrid } from '@/components/services-grid';
import { Container } from '@/components/ui/container';
import Section from '@/components/ui/section.astro';
import { Caption, Heading, Paragraph } from '@/components/ui/typography';
---

<Section
  id="services"
  aria-labelledby="services-heading"
  hasBorderTop
  hasGlowEffect
>
  <Container>
    <div class="mb-16 flex flex-col items-center text-center">
      <Caption id="services-heading">Services</Caption>
      <Heading>
        Websites for <br class="lg:hidden" />local businesses
      </Heading>
      <Paragraph>
        I build affordable, simple websites for cafes, restaurants, hotels, and small businesses in Trivandrum.
        <span class="text-neutrals-100">24/7 availability, local support, quick turnaround.</span>
      </Paragraph>
    </div>
    <ServicesGrid client:visible />
  </Container>
</Section>
