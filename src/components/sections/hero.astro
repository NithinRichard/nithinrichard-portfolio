---
import { GridBackground } from '@/components/grid-background';
import { Button } from '@/components/ui/button';
import { Container } from '@/components/ui/container';
---

<section
  aria-labelledby="hero-heading"
  class="sticky inset-0 flex h-svh w-full flex-col justify-center py-28"
>
  <GridBackground client:visible />
  <Container>
    <div class="flex flex-col items-center justify-center">
      <h1
        id="hero-heading"
        class="from-neutrals-50 to-primary bg-radial from-50% bg-clip-text text-center text-4xl/tight font-bold text-balance text-transparent sm:text-5xl/tight md:text-7xl lg:text-8xl/tight"
      >
        Full-Stack Engineer Building Client-Focused Web Products
      </h1>
      <div class="mt-12 flex items-stretch gap-x-6 gap-y-3 max-sm:flex-col sm:items-center">
        <Button
          as="a"
          href="/#work"
          background="primary"
          size="large"
        >
          View My Work
        </Button>
        <Button
          as="a"
          href="/#contact"
          background="primary"
          size="large"
          isGhost
        >
          Get in Touch
        </Button>
      </div>
    </div>
  </Container>
</section>
